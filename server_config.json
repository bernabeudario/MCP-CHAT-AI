{
    "mcpServers": {
        "calculadora": {
            "command": "uv",
            "args": ["run", "mcp_calculadora.py"]
        },
        "fetch": {
            "command": "uvx",
            "args": ["mcp-server-fetch"]
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "D:\\Programas\\MCP"
            ]
        }
    }
}
  